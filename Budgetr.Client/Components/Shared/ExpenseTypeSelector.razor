<MudSelect Label="@Label"
           @bind-Value="_expenseType"
           Required="@Required">
    <MudSelectItem Value="@(ExpenseType.Transportation)">Auto</MudSelectItem>
    <MudSelectItem Value="@(ExpenseType.Cellular)">Cellular</MudSelectItem>
    <MudSelectItem Value="@(ExpenseType.Grocery)">Grocery</MudSelectItem>
    <MudSelectItem Value="@(ExpenseType.Housing)">Housing</MudSelectItem>
    <MudSelectItem Value="@(ExpenseType.Leisure)">Leisure</MudSelectItem>
    <MudSelectItem Value="@(ExpenseType.Miscellaneous)">Miscellaneous</MudSelectItem>
</MudSelect>

@code {
    [Parameter]
    public ExpenseType ExpenseType { get; set; }
    private ExpenseType _expenseType
    {
        get => ExpenseType;
        set
        {
            if (ExpenseType != value)
            {
                ExpenseType = value;
                ExpenseTypeChanged.InvokeAsync(value);
            }
        }
    }
    [Parameter]
    public EventCallback<ExpenseType> ExpenseTypeChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Expense Type";

    [Parameter]
    public bool Required { get; set; } = true;
}