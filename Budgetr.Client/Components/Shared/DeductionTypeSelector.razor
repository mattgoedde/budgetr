<MudSelect Label="@Label"
           @bind-Value="_deductionType"
           Required="@Required">
    <MudSelectItem Value="@(DeductionType.PreTax)">Pre-Tax</MudSelectItem>
    <MudSelectItem Value="@(DeductionType.Tax)">Tax</MudSelectItem>
    <MudSelectItem Value="@(DeductionType.PostTax)">Post-Tax</MudSelectItem>
</MudSelect>

@code {
    [Parameter]
    public DeductionType DeductionType { get; set; }
    private DeductionType _deductionType
    {
        get => DeductionType;
        set
        {
            if (DeductionType != value)
            {
                DeductionType = value;
                DeductionTypeChanged.InvokeAsync(value);
            }
        }
    }
    [Parameter]
    public EventCallback<DeductionType> DeductionTypeChanged { get; set; }

    [Parameter]
    public string Label { get; set; } = "Deduction Type";

    [Parameter]
    public bool Required { get; set; } = true;
}