@inherits LayoutComponentBase

@inject ISnackbar Snackbar
@inject ILogger<MainLayout> Logger

<MudThemeProvider />
<MudDialogProvider CloseOnEscapeKey="true" CloseButton="true" />
<DesktopOnly>
    <MudSnackbarProvider />
</DesktopOnly>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start"
            OnClick="@((e) => DrawerToggle())" />
        <MudLink Typo="Typo.h5" Class="ml-3" Color="Color.Inherit" Href="">Budgetr App</MudLink>
        <MudSpacer />
        <LoginDisplay />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Never" Variant="@DrawerVariant.Temporary">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    
    private bool _drawerOpen = false;
    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}