@inherits LayoutComponentBase
<FluentLayout>
    <FluentHeader>
        <FluentStack Orientation="@Orientation.Horizontal">
            Budgetr
            <FluentSpacer />
            <ProfileIcon />
            <a href="https://github.com/mattgoedde/budgetr"><FluentIcon Value="@(Icon.FromImageUrl("/images/github-mark.svg"))" /></a>
        </FluentStack>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent>
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <div class="link1">
            <a href="/" target="_blank">Privacy</a>
            <a href="/" target="_blank">License</a>
        </div>
        <div class="link2">
            <p>&copy; @DateTime.Today.Year - Budgetr</p>
        </div>
    </FluentFooter>
</FluentLayout>

<FluentDialogProvider />
<FluentMessageBarProvider />
<FluentToastProvider />
<FluentTooltipProvider />

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
