@page "/profile"

<h3>Profile</h3>

<FluentStack Orientation="@Orientation.Vertical">
    <p>@(authState?.User?.Identity?.Name ?? "user")</p>
    <FluentButton IconStart="@(new Icons.Regular.Size16.Delete())">Remove all data</FluentButton>
    <FluentAnchor Href="/.auth/logout">Log Out</FluentAnchor>
</FluentStack>

@code {
    [CascadingParameter]
    public AuthenticationState? authState { get; set; }
}
